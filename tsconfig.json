{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"types": ["vitest/globals"],
		"baseUrl": ".",
		"paths": {
			"@sigrea/react": ["./index.ts"]
		}
	},
	"include": [
		"index.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"playground/src/**/*.ts",
		"playground/src/**/*.tsx",
		"playground/src/**/*.d.ts"
	],
	"exclude": ["dist", "node_modules"]
}
